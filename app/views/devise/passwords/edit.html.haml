%section.block#change-password
  %header
    .title
      Change your password
    .gradient
    - # TODO: add .icon
  .form.clearfix
    = form_for(resource, as: resource_name, url: password_path(resource_name), validate: true, html: { method: :put, id: 'form-change-password' }) do |f|
      - # FIXME: Reset password token is invalid
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .new-password
        = f.password_field :password, class: 'input-full', placeholder: 'New password', autofocus: true, validate: { presence: true, confirmation: true }
      .confirm-new-password
        = f.password_field :password_confirmation, class: 'input-full', placeholder: 'Confirm new password'
      %footer
        = f.submit 'Change my password', class: 'btn btn-primary pull-right'
        
= render 'layouts/footer'
