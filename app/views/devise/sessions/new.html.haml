%section.block#sign-in
  %header
    .title
      Sign In
    .gradient
    - # TODO: add .icon
  .form.clearfix
    = form_for(@user, as: resource_name, url: session_path(resource_name), remote: true, html: { data: { type: :json }, id: 'form-sign-in' }) do |f|
      = devise_error_messages!
      .login
        = f.text_field :login, class: 'input-full', placeholder: 'Username or email', autofocus: true
      .password
        .wrapper
          = f.password_field :password, class: 'input-full', placeholder: 'Password', validate: { presence: true, confirmation: false }
          = link_to 'Forgot It ?', new_user_password_path
      .remeber-me.checkbox
        = f.check_box :remember_me, 'data-label' => 'Remember me'
      %footer
        .social
          = link_to user_omniauth_authorize_path(:facebook), class: 'btn facebook-sign-in' do
            Sign In
            .icon
            .line
          = link_to user_omniauth_authorize_path(:twitter), class: 'btn twitter-sign-in' do
            Sign In
            .icon
            .line
        = f.submit 'SIGN IN', class: 'btn btn-primary pull-right'
        
= render 'layouts/footer'