%section.block#sign-up
  %header
    .title
      Join Us
    .gradient
    - # TODO: add .icon
  .form.clearfix
    = form_for(@user, as: resource_name, url: registration_path(resource_name), validate: true, class: '') do |f|
      = devise_error_messages!
      .name
        = f.text_field :username, autofocus: true, class: 'input-full', placeholder: 'Username'
      .email
        = f.email_field :email, class: 'input-full', placeholder: 'Email address'
      .password
        .wrapper
          = f.password_field :password, class: 'input-full with-strength', placeholder: 'Password', validate: { presence: true, confirmation: false }
      %footer
        = f.submit 'CREATE ACCOUNT', class: 'btn btn-primary pull-right'
        
= render 'layouts/footer'