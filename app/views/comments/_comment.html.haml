- if comment.user
  .record.comment
    .avatar
      = link_to image_tag('avatar.png'), comment.user
    .second
      %header
        .name
          = link_to comment.user.username, comment.user
        .date
          = time_ago_in_words(comment.created_at) 
          ago
      .middle
        .description
          = wrap comment.content
      %footer
        = link_to '', class: 'like two' do
          .field
            21
        .reply